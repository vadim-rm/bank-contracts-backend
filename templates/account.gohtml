<!doctype html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/static/style.css"/>
    <title>Заказ</title>
</head>
<body>
{{template "header" .Cart}}
<main>
    <h1>Заявка на счёт</h1>
    <div class="cart-column">
        <input type="text" name="contractName" placeholder="Номер счёта" value="{{ .ContractNameFilter }}">
        {{ range $i, $contract := .Contracts }}
            <div class="card">
                <img src="{{ $contract.ImageUrl }}" class="image image-cart">
                <div class="description-column">
                    <a href="/contracts/{{ $contract.Id }}" class="title">{{ $contract.Name }}
                        {{ if .IsMain }}
                            <div class="main-badge">Основной</div>{{ end }}
                    </a>
                    <div class="badge">
                        <p class="digit">{{ $contract.Fee }} ₽</p>
                        <p class="description">плата за обслуживание</p>
                    </div>
                    <a href="/contracts/{{ $contract.Id }}"
                       class="card-button secondary">Подробнее</a>
                </div>
            </div>
            <hr>
        {{end}}
        <div class="buttons-row">
            <form action="/accounts/{{ .Id }}" method="post">
                <button class="card-button secondary" type="submit">Очистить</button>
            </form>
        </div>
    </div>
</main>
</body>
</html>