<!doctype html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/static/style.css"/>
    <title>Заказ</title>
</head>
<body>
{{template "header" .Cart}}
<main>
    <h1>Заказ</h1>
    <div class="cart-column">
        <div class="input-column">
            <label for="account-id">Номер счёта</label>
            <input type="text" name="contractName" placeholder="Номер счёта" id="account-id"
                   value="{{ .ContractNameFilter }}">
        </div>
        {{ $orderId := .Id }}
        {{ range $i, $contract := .Contracts }}
            <div class="card">
                <img src="{{ $contract.ImageUrl }}" class="image image-cart">
                <div class="description-column">
                    <a href="/contracts/{{ $contract.Id }}" class="title">{{ $contract.Name }}</a>
                    <div class="badge">
                        <p class="digit">до {{ $contract.AnnualRate }}%</p>
                        <p class="description">ставка годовых</p>
                    </div>
                    <a href="/contracts/{{ $contract.Id }}"
                       class="card-button secondary">Подробнее</a>
                </div>
            </div>
            <hr>
        {{end}}
    </div>
</main>
</body>
</html>